<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignment Tracker</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>

    <div class="max-w-7xl mx-auto">
        <h1 class="text-2xl font-bold text-center py-5">
            Assignment Tracker
        </h1>

        <div class="flex justify-between items-center">
            <div class="space-x-3">
                <a href="/?session=1" data-session="1" class="bg-purple-300 p-2 rounded-lg text-purple-800 tab">Session 1</a>
                <a href="/?session=2" data-session="2" class="bg-purple-300 p-2 rounded-lg text-purple-800 tab">Session 2</a>
                <a href="/?session=3" data-session="3" class="bg-purple-300 p-2 rounded-lg text-purple-800 tab">Session 3</a>
            </div>
            <div>
                <a href="/form">Add Assignment</a>
            </div>
        </div>

        <div class="relative overflow-x-auto mt-4">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 border border-gray-200">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Student</th>
                        <th scope="col" class="px-6 py-3">Link</th>
                        <th scope="col" class="px-6 py-3">Time</th>
                        <th scope="col" class="px-6 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                   <% assigments.forEach(function(assigment){ %>
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            <%= assigment.name %>
                        </th>
                        <td class="px-6 py-4"><%= assigment.link %></td>
                        <td class="px-6 py-4"><%= assigment.submitted_at %></td>
                        <td class="px-6 py-4 flex gap-2">
                            <a href="/edit/<%= assigment._id %>" class="text-blue-600 hover:underline">Edit</a>
                            <form action="/delete/<%= assigment._id %>" method="POST" style="display:inline;">
                                <button type="submit" class="text-red-600 hover:underline ml-2" onclick="return confirm('Are you sure you want to delete this assignment?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="tracker.js"></script>
</body>
</html>
